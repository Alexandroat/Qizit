<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/CustomActionBarTheme"/>

    <!-- Login and Sing Up theme -->
    <style name="loginSingUp_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/logo2</item>
    </style>
    
    <!-- Edit Text theme -->
    <style name="editText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_weight">0.10</item>
        <item name="android:clickable">true</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/relleno_text</item>
    </style>

    <!-- Background color of the app -->
    <style name="appBackground_style">
        <item name="android:background">#ff5cffad <!--@drawable/fondo--></item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/redondear_buttons</item>
    </style>

</resources>
