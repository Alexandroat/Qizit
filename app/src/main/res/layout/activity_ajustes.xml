<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.qizit.OptionsMenu"
    android:background="#ff5cffad"
    android:id="@+id/prueba">



    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/button"
        android:textColor="#f8010302"
        android:background="#9bff2523"
        android:focusable="false"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="198dp"
        android:text="Restablecer Puntuaciones"
        android:id="@+id/textView11"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_gravity="left|bottom" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="149dp"
        android:text="Eliminará todas las puntuaciones guardadas"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:layout_gravity="left|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Vibración"
        android:id="@+id/textView4"
        android:layout_gravity="left|center_vertical"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="393dp"
        android:text="Sonido"
        android:id="@+id/textView5"
        android:layout_gravity="left|center_vertical"
        android:textSize="25sp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:id="@+id/switch1"
        android:layout_gravity="right|center_vertical"
        android:checked="false"
        tools:ignore="NewApi" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="232dp"
        android:id="@+id/switch2"
        android:layout_gravity="right|top"
        android:checked="false"
        tools:ignore="NewApi" />

</FrameLayout>
