<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.qizit.PlayNormal">

    <TextView android:text="Pregunta" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPregunta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buttonRespuesta1"
        android:id="@+id/buttonRespuesta1"
        android:layout_below="@+id/textViewPregunta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buttonRespuesta2"
        android:id="@+id/buttonRespuesta2"
        android:layout_below="@+id/buttonRespuesta1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buttonRespuesta3"
        android:id="@+id/buttonRespuesta3"
        android:layout_below="@+id/buttonRespuesta2"
        android:layout_alignLeft="@+id/buttonRespuesta2"
        android:layout_alignStart="@+id/buttonRespuesta2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buttonRespuesta4"
        android:id="@+id/buttonRespuesta4"
        android:layout_below="@+id/buttonRespuesta3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
